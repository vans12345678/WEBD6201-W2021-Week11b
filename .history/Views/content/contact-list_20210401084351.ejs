<h1>Contact List</h1>

        <div class="row">
          <div class="col">

            <button href = "/add" id="addButton" class="btn btn-primary mb-1"><i class="fas fa-plus-circle"></i> Add Contact</button>

            <table class="table table-striped table-bordered table-hover">
              <thead class="table-dark">
                <tr>
                  <th scope="col" class="text-center">#</th>
                  <th scope="col">Full Name</th>
                  <th scope="col">Contact Number</th>
                  <th scope="col">Email Address</th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <tbody id="contactList">
                <% for(let count = 0; count < contacts.length; count++) %>
                {
                    <tr>
                    <th scope="row" class="text-center"><%= count+1 %></th>
                    <td><%=contacts[count].FullName %></td>
                    <td><%=contacts[count].ContactNumber %></td>
                    <td><%=contacts[count].EmailAddress %></td>
                    <td class="text-center"><button class="btn btn-primary btn-sm edit"><i class="fas fa-edit fa-sm"></i> Edit</button></td>
                    <td class="text-center"><button class="btn btn-danger btn-sm delete"><i class="fas fa-trash-alt fa-sm"></i> Delete</button></td>
                    </tr>

               <% } %>
              </tbody>
            </table>
          </div>
        </div>